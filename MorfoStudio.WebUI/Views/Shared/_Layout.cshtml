<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Morfo Studio</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <style>
        @@font-face {
            font-family: 'Century Gothic';
            src: url('https://fonts.cdnfonts.com/s/72921/CooperBlack.woff') format('woff');
        }

        html, body {
            height: 100%;
            margin: 0;
            background-color: #000000;
            color: white;
        }

        .content-wrapper {
            min-height: 100%;
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
            padding-bottom: 50px;
        }

        .nav-link.custom-font {
            font-size: 50px !important;
            font-weight: bold;
            font-family: 'Century Gothic', serif;
            color: white !important;
        }

        .nav-separator {
            color: white;
            font-size: 40px !important;
            font-weight: bold;
            font-family: 'Century Gothic', serif;
            padding: 0 10px;
        }

        /* --- PRODUCTS SAYFASI İÇİN YENİ STİLLER --- */

        .product-card-custom {
            background-color: #000000;
            border: 1px solid rgba(255, 255, 255, 0.2); /* İnce beyaz çerçeve */
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: transform 0.2s; /* Üzerine gelince büyüme efekti için */
        }

            .product-card-custom:hover {
                transform: scale(1.03); /* Üzerine gelince biraz büyüt */
            }

        .product-image-wrapper {
            padding: 10px; /* Görselin çerçeve içinde kalması için */
        }

            .product-image-wrapper img {
                border-radius: 8px; /* Görselin kenarlarını yumuşat */
            }

        .product-title-custom {
            font-size: 24px !important;
            font-weight: bold;
            font-family: 'Century Gothic', serif;
        }

        .product-price-custom {
            font-size: 20px !important;
            font-weight: bold;
            font-family: 'Century Gothic', serif;
        }
    </style>
</head>
<body>
    <div class="content-wrapper">
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #000000;">
                <div class="container-fluid">
                    <a class="navbar-brand d-flex align-items-center" href="/">
                        <img src="~/images/morfologo.png"
                             style="width:350px; height:200px; margin-right:10px;"
                             alt="Morfo Studio Logo">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto align-items-center">
                            <li class="nav-item">
                                <a class="nav-link custom-font" asp-controller="Home" asp-action="Index">Home Page</a>
                            </li>
                            <span class="nav-separator">|</span>
                            <li class="nav-item">
                                <a class="nav-link custom-font" asp-controller="Home" asp-action="About">About</a>
                            </li>
                            <span class="nav-separator">|</span>
                            <li class="nav-item">
                                <a class="nav-link custom-font" asp-controller="Products" asp-action="Index">Products</a>
                            </li>
                            <span class="nav-separator">|</span>
                            <li class="nav-item">
                                <a class="nav-link custom-font" asp-controller="Home" asp-action="Contact">Contact</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <main class="container-fluid mt-4">
            @RenderBody()
        </main>

        <footer class="text-white text-center py-3" style="background-color: #000000;">
            <p>&copy; 2025 - Morfo Studio</p>
            <p>Çanakkale, Türkiye</p>
        </footer>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>